@model SelectRoleViewModel


@{
    ViewData["Title"] = $"Add user '{Model.UserName}' to a role";
    Layout = "_Layout";
}

<h2>Add user <b>@Model.UserName</b> to a role</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToRole" asp-route-id="@Model.Id">
            <div class="form-group row">
                <div class="col-xs-8">
                    <label asp-for="SelectedRoleName"></label>
                    <select asp-for="SelectedRoleName"
                            asp-items="Model.AllRoles"
                            class="form-control">
                        <option value="">-- Choose a role --</option>
                    </select>
                    <span asp-validation-for="SelectedRoleName"></span>
                    <span class="help-block">
                        Choose a role to which the user should be added.
                    </span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}