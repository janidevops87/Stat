@model EditPropertiesViewModel

<form asp-action="EditProperties" asp-route-id="@Model.Id" method="post">
   
    <div class="form-group row">
        <div class="col-xs-12 col-sm-4">
            <label asp-for="EditableUserName"></label>
            <input asp-for="EditableUserName" class="form-control">
            <span asp-validation-for="EditableUserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-12 col-sm-4">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>